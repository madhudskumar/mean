.container(style="margin-top:100px;")
    .pull-right
        form.form-inline
            .form-group
               input.form-control(ng-model="searchText", placeholder="search")
            .form-group
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOption", aria-label="ngSelected", ng-init="sortOrder = item[0].value", ng-selected="item[0].value")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Title
                th details
        tbody
            tr(ng-repeat="course in courses | filter:searchText | orderBy:sortOrder")
                td  {{course.title}}
                td  {{course.published | date:'MMM dd'}}